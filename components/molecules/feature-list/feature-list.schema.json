{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature List",
  "type": "object",
  "category": "molecule",
  "description": "List of features with icons and text. Used in pricing tables, product descriptions, and feature comparison sections.",
  "properties": {
    "items": {
      "type": "array",
      "description": "Array of feature items",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Feature description text"
          },
          "icon": {
            "type": "string",
            "description": "Icon name (defaults to defaultIcon if not specified)",
            "enum": [
              "check",
              "x",
              "verified",
              "star",
              "shield",
              "heart",
              "trophy",
              "gift"
            ]
          },
          "included": {
            "type": "boolean",
            "description": "Whether the feature is included (affects styling)",
            "default": true
          }
        },
        "required": ["text"]
      }
    },
    "iconPosition": {
      "type": "string",
      "description": "Position of icons relative to text",
      "enum": ["left", "top"],
      "default": "left"
    },
    "density": {
      "type": "string",
      "description": "Spacing density between items",
      "enum": ["compact", "normal", "spacious"],
      "default": "normal"
    },
    "columns": {
      "type": "number",
      "description": "Number of columns (1 or 2)",
      "enum": [1, 2],
      "default": 1
    },
    "defaultIcon": {
      "type": "string",
      "description": "Default icon for items without explicit icon",
      "default": "check"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the component"
    },
    "attributes": {
      "type": "object",
      "description": "Additional HTML attributes"
    },
    "a11y": {
      "type": "object",
      "description": "Accessibility properties",
      "properties": {
        "ariaLabel": {
          "type": "string",
          "description": "Accessible label for the list"
        }
      }
    }
  },
  "required": ["items"],
  "examples": [
    {
      "name": "Basic Feature List",
      "description": "Simple list with checkmarks",
      "props": {
        "items": [
          { "text": "Unlimited users" },
          { "text": "24/7 customer support" },
          { "text": "Advanced analytics" },
          { "text": "Custom branding" }
        ]
      }
    },
    {
      "name": "Pricing Table Features",
      "description": "Feature list for pricing comparison with included/excluded items",
      "props": {
        "items": [
          { "text": "Unlimited projects", "icon": "check" },
          { "text": "Priority support", "icon": "check" },
          { "text": "Advanced reporting", "icon": "check" },
          { "text": "Custom domain", "icon": "x", "included": false },
          { "text": "White-label branding", "icon": "x", "included": false }
        ]
      }
    },
    {
      "name": "Two-Column Compact",
      "description": "Space-efficient layout for long feature lists",
      "props": {
        "columns": 2,
        "density": "compact",
        "items": [
          { "text": "SSL certificate" },
          { "text": "CDN included" },
          { "text": "99.9% uptime" },
          { "text": "Daily backups" },
          { "text": "Email support" },
          { "text": "API access" }
        ]
      }
    },
    {
      "name": "Top-Aligned Icons",
      "description": "Icons positioned above text for longer descriptions",
      "props": {
        "iconPosition": "top",
        "density": "spacious",
        "items": [
          { "text": "Enterprise-grade security with end-to-end encryption and SOC 2 compliance" },
          { "text": "24/7 dedicated support team with guaranteed 1-hour response time" },
          { "text": "Unlimited storage and bandwidth for all your content and assets" }
        ]
      }
    },
    {
      "name": "Product Benefits",
      "description": "Product features with varied icons",
      "props": {
        "defaultIcon": "star",
        "items": [
          { "text": "Award-winning customer service", "icon": "trophy" },
          { "text": "Trusted by 10,000+ businesses", "icon": "shield" },
          { "text": "30-day money-back guarantee", "icon": "verified" },
          { "text": "Free lifetime updates", "icon": "gift" }
        ]
      }
    }
  ],
  "accessibility": {
    "features": [
      "Semantic <ul> list structure",
      "Icons marked as decorative with aria-hidden",
      "Color not solely used to convey meaning (text styling for excluded items)",
      "High contrast mode adds strikethrough to excluded items",
      "Support for custom aria-label on the list"
    ],
    "wcag": {
      "level": "AA",
      "criteria": [
        "1.3.1 Info and Relationships (A)",
        "1.4.1 Use of Color (A)",
        "1.4.3 Contrast (Minimum) (AA)"
      ]
    }
  },
  "performance": {
    "target": "800B gzipped",
    "notes": "Lightweight component that composes Icon and Text atoms. Minimal CSS for layout and spacing."
  },
  "useCases": [
    "Pricing table feature lists",
    "Product comparison pages",
    "Plan benefits sections",
    "Feature highlight sections",
    "Service offering lists"
  ],
  "relatedComponents": [
    "Icon (atom)",
    "Text (atom)",
    "Pricing Card (organism)",
    "Comparison Table (organism)"
  ]
}

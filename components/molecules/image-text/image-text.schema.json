{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "components/molecules/image-text/schema",
  "title": "Image+Text Component Schema",
  "description": "WORKHORSE molecule for feature showcases, product pages, and 'How it works' sections. Combines image with text content in flexible, responsive layouts.",
  "type": "object",
  "category": "molecule",
  "componentName": "image-text",
  "version": "1.0.0",
  "metadata": {
    "displayName": "Image+Text",
    "description": "Flexible image and text combination for feature showcases, product pages, and storytelling sections",
    "tags": ["molecule", "marketing", "feature", "showcase", "workhorse"],
    "composedOf": [
      "atoms/heading",
      "atoms/text",
      "atoms/button"
    ],
    "accessibility": {
      "wcagLevel": "AA",
      "keyboardNavigable": true,
      "screenReaderFriendly": true,
      "contrastCompliant": true,
      "features": [
        "Semantic HTML with figure/figcaption",
        "Required alt text on images",
        "Configurable heading levels",
        "High contrast mode support"
      ]
    },
    "responsive": {
      "breakpoints": ["mobile", "tablet", "desktop"],
      "behavior": "adaptive",
      "mobileStackable": true,
      "notes": "Always stacks on mobile, side-by-side on tablet+"
    },
    "darkMode": true,
    "performance": {
      "bundleSize": "1.2KB gzipped (target)",
      "optimizations": [
        "Lazy loading images by default",
        "Container queries for layout",
        "Pure CSS (no JavaScript)",
        "Aspect ratio prevents CLS"
      ]
    },
    "usageExamples": [
      {
        "title": "Basic Feature Showcase",
        "description": "Simple image left with text right",
        "code": "{{ imageText({\n  image: { src: 'feature.jpg', alt: 'Feature screenshot' },\n  headline: 'Powerful Analytics',\n  description: 'Track your growth with detailed insights.'\n}) }}"
      },
      {
        "title": "Alternating Pattern",
        "description": "Sequential left/right switching for visual rhythm",
        "code": "<div class=\"image-text-alternate\">\n  {{ imageText({ imagePosition: 'left', ... }) }}\n  {{ imageText({ imagePosition: 'left', ... }) }}\n  {{ imageText({ imagePosition: 'left', ... }) }}\n</div>"
      }
    ],
    "layoutPatterns": [
      "image-left",
      "image-right",
      "image-top",
      "alternating"
    ]
  },
  "properties": {
    "imagePosition": {
      "type": "string",
      "enum": ["left", "right", "top"],
      "default": "left",
      "description": "Position of image relative to text content"
    },
    "image": {
      "type": "object",
      "required": true,
      "description": "Image properties",
      "properties": {
        "src": {
          "type": "string",
          "description": "Image source URL (required)",
          "required": true
        },
        "alt": {
          "type": "string",
          "description": "Alternative text for accessibility (required)",
          "required": true
        },
        "loading": {
          "type": "string",
          "enum": ["lazy", "eager"],
          "default": "lazy",
          "description": "Image loading strategy"
        }
      }
    },
    "aspectRatio": {
      "type": "string",
      "enum": ["16-9", "4-3", "1-1", "auto"],
      "default": "auto",
      "description": "Image aspect ratio enforcement for visual consistency"
    },
    "headline": {
      "type": "string",
      "description": "Main heading text"
    },
    "headingLevel": {
      "type": "number",
      "minimum": 1,
      "maximum": 6,
      "default": 2,
      "description": "Semantic heading level (h1-h6)"
    },
    "description": {
      "type": "string",
      "description": "Body text description"
    },
    "cta": {
      "type": "object",
      "description": "Call-to-action button (optional)",
      "properties": {
        "text": {
          "type": "string",
          "description": "Button text"
        },
        "href": {
          "type": "string",
          "description": "Button URL"
        },
        "variant": {
          "type": "string",
          "enum": ["primary", "secondary", "outline", "ghost"],
          "default": "primary",
          "description": "Button style variant"
        },
        "size": {
          "type": "string",
          "enum": ["sm", "md", "lg"],
          "default": "md",
          "description": "Button size"
        }
      }
    },
    "caption": {
      "type": "string",
      "description": "Image caption (e.g., photo credit, description)"
    },
    "backgroundColor": {
      "type": "string",
      "enum": ["primary", "secondary", "accent", "neutral"],
      "description": "Background color block for visual interest"
    },
    "ratio": {
      "type": "string",
      "enum": ["50-50", "40-60", "60-40", "33-67", "67-33"],
      "default": "50-50",
      "description": "Column width ratio (image:text)"
    },
    "gap": {
      "type": "string",
      "enum": ["sm", "md", "lg", "xl", "2xl"],
      "default": "lg",
      "description": "Spacing gap between image and content"
    },
    "verticalAlign": {
      "type": "string",
      "enum": ["top", "center", "bottom"],
      "default": "center",
      "description": "Vertical alignment of content"
    },
    "alternate": {
      "type": "boolean",
      "default": false,
      "description": "Apply alternating pattern (for use in sequences)"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the component"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    },
    "attributes": {
      "type": "object",
      "description": "Additional HTML attributes"
    },
    "a11y": {
      "type": "object",
      "description": "Accessibility properties",
      "properties": {
        "role": {
          "type": "string",
          "description": "ARIA role"
        },
        "ariaLabel": {
          "type": "string",
          "description": "ARIA label"
        },
        "ariaDescribedBy": {
          "type": "string",
          "description": "ARIA described-by reference"
        }
      }
    }
  },
  "required": ["image"],
  "marketingUseCases": [
    {
      "useCase": "Feature Showcases",
      "description": "Display product features with alternating image/text layouts",
      "recommendations": [
        "Use alternating pattern (.image-text-alternate) for visual rhythm",
        "Enforce consistent aspect ratio (16:9 recommended) across all features",
        "Add CTAs to high-value features only (avoid CTA fatigue)",
        "Use 60-40 ratio for features with complex screenshots"
      ]
    },
    {
      "useCase": "How It Works Sections",
      "description": "Step-by-step process with visuals",
      "recommendations": [
        "Use image-top layout for sequential steps on mobile",
        "Number headlines: 'Step 1: Setup', 'Step 2: Configure'",
        "Use square aspect ratio (1:1) for consistency",
        "Keep descriptions concise (1-2 sentences max)"
      ]
    },
    {
      "useCase": "Product Pages",
      "description": "Product screenshots with detailed descriptions",
      "recommendations": [
        "Use 16:9 aspect ratio for desktop screenshots",
        "Add image captions for context or credits",
        "Use primary background color to highlight key features",
        "Include strong CTAs ('Try it free', 'See demo')"
      ]
    },
    {
      "useCase": "About Pages",
      "description": "Team photos with company story",
      "recommendations": [
        "Use 4:3 or 1:1 aspect ratio for team photos",
        "Add photo captions with names/roles",
        "Use neutral background for professional tone",
        "Keep CTA subtle (e.g., 'Join our team' link)"
      ]
    }
  ],
  "alternatingPattern": {
    "description": "Create visual rhythm with sequential left/right switching",
    "usage": "Wrap multiple image-text components in a container with .image-text-alternate class. Each component should have imagePosition: 'left', and the container will automatically alternate odd items to the right on desktop.",
    "example": "<div class=\"image-text-alternate\">\n  <!-- Item 1: Image left (default) -->\n  <!-- Item 2: Image left (stays left) -->\n  <!-- Item 3: Image left (switches to right via :nth-child(odd)) -->\n</div>",
    "benefits": [
      "Visual variety without manual configuration",
      "Better visual rhythm for long feature lists",
      "Automatic responsive behavior (stacks on mobile)"
    ]
  }
}

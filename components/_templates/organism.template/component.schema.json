{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "components/organisms/COMPONENT_NAME_KEBAB/schema",
  "title": "COMPONENT_NAME_PASCAL",
  "type": "object",
  "description": "[Organism - complete page section combining molecules and atoms]",
  "category": "organism",
  "metadata": {
    "displayName": "COMPONENT_NAME_PASCAL",
    "description": "[Detailed description for component discovery]",
    "tags": ["organism", "section", "page-section"],
    "composedOf": [
      "molecules/component-1",
      "molecules/component-2",
      "atoms/component-3"
    ],
    "accessibility": {
      "wcagLevel": "AA",
      "keyboardNavigable": true,
      "screenReaderFriendly": true,
      "contrastCompliant": true,
      "ariaRole": "region",
      "landmarkRole": true,
      "headingStructure": "Semantic heading hierarchy maintained"
    },
    "responsive": {
      "breakpoints": ["mobile", "tablet", "desktop"],
      "behavior": "fully-responsive",
      "mobileStackable": true,
      "containerQueries": true
    },
    "darkMode": true,
    "usageExamples": [
      {
        "title": "Hero Section",
        "description": "Full-width hero with heading and CTA",
        "code": "{{ COMPONENT_NAME_KEBAB({ layout: 'centered', header: {...} }) }}"
      }
    ],
    "layoutPatterns": [
      "default",
      "split",
      "centered",
      "full-width"
    ],
    "typicalUseCase": "Page section",
    "sectionType": "header|hero|features|testimonials|cta|footer"
  },
  "properties": {
    "variant": {
      "type": "string",
      "enum": ["default", "primary", "inverted"],
      "default": "default",
      "description": "Visual style variant"
    },
    "layout": {
      "type": "string",
      "enum": ["default", "split", "centered", "full-width"],
      "default": "default",
      "description": "Layout pattern"
    },
    "size": {
      "type": "string",
      "enum": ["compact", "default", "spacious"],
      "default": "default",
      "description": "Spacing size"
    },
    "header": {
      "type": "object",
      "description": "Header section configuration",
      "properties": {
        "heading": {
          "type": "string",
          "description": "Main heading text"
        },
        "subheading": {
          "type": "string",
          "description": "Subheading text"
        },
        "description": {
          "type": "string",
          "description": "Additional description HTML"
        }
      }
    },
    "content": {
      "type": "object",
      "description": "Main content configuration",
      "properties": {
        "items": {
          "type": "array",
          "description": "Array of content items",
          "items": {
            "type": "object"
          }
        },
        "primary": {
          "type": "string",
          "description": "Primary content for split layout"
        },
        "secondary": {
          "type": "string",
          "description": "Secondary content for split layout"
        }
      }
    },
    "footer": {
      "type": "object",
      "description": "Footer section configuration",
      "properties": {
        "actions": {
          "type": "array",
          "description": "Array of action button configurations",
          "items": {
            "type": "object"
          }
        },
        "content": {
          "type": "string",
          "description": "Additional footer content"
        }
      }
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the component instance"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes to apply"
    },
    "attributes": {
      "type": "object",
      "description": "Additional HTML attributes",
      "additionalProperties": {
        "type": "string"
      }
    },
    "a11y": {
      "type": "object",
      "description": "Accessibility properties",
      "properties": {
        "ariaLabel": {
          "type": "string",
          "description": "Accessible label for screen readers"
        },
        "ariaLabelledBy": {
          "type": "string",
          "description": "ID of element that labels this section"
        },
        "ariaDescribedBy": {
          "type": "string",
          "description": "ID of element that describes this section"
        },
        "role": {
          "type": "string",
          "description": "ARIA role override",
          "default": "region"
        }
      }
    }
  },
  "required": [],
  "additionalProperties": false
}
